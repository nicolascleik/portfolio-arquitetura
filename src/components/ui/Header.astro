---
const navItems = [
  { label: 'Sobre', href: '#about' },
  { label: 'Projetos', href: '#projects' },
  { label: 'ServiÃ§os', href: '#services' },
  { label: 'Contato', href: '#contact' },
];

const base = import.meta.env.BASE_URL;

const getLink = (href: string) => {
  if (href.startsWith('#')) {
    return `${base === '/' ? '' : base}/${href}`;
  }
  return href;
};
---

<header class="fixed top-0 w-full z-50 bg-stone-50/90 backdrop-blur-md border-b border-stone-200 transition-all duration-300" id="main-header">
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    
    <a href={base} class="text-xl font-semibold tracking-widest uppercase hover:text-stone-600 transition-colors">
      ARQ<span class="text-stone-400">.</span>STUDIO
    </a>

    <nav class="hidden md:flex gap-8">
      {navItems.map(item => (
        <a 
          href={getLink(item.href)} 
          class="text-sm font-medium text-stone-600 hover:text-stone-900 hover:underline underline-offset-4 transition-all"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <button 
      class="md:hidden p-2 text-stone-600 hover:bg-stone-100 rounded-md transition-colors z-50 relative" 
      aria-label="Abrir Menu"
      id="menu-btn"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </div>

  <div id="mobile-menu" class="hidden md:hidden absolute top-20 left-0 w-full bg-stone-50 border-b border-stone-200 p-6 shadow-xl z-40 origin-top animate-in slide-in-from-top-2 duration-200">
    <nav class="flex flex-col gap-4">
      {navItems.map(item => (
        <a 
          href={getLink(item.href)} 
          class="mobile-link text-lg font-medium text-stone-600 py-2 border-b border-stone-100 last:border-0 hover:text-stone-900"
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link');

  menuBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    mobileMenu?.classList.toggle('hidden');
  });

  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!mobileMenu?.classList.contains('hidden') && 
        !mobileMenu?.contains(target) && 
        !menuBtn?.contains(target)) {
      mobileMenu?.classList.add('hidden');
    }
  });

  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>